<?xml version="1.0"?>   
<layout>   
    <catalog_product_view translate="label">
        <reference name="head">
			<action method="addCss" ifconfig="scsection/kerssgroup/scenable">
                <stylesheet>css/sizechart/sizechart.css</stylesheet>
            </action>
            <action method="addCss" ifconfig="scsection/kerssgroup/scenable">
                <stylesheet>css/sizechart/fancybox/jquery.fancybox-1.3.4.css</stylesheet>
            </action>
            <action method="addItem" ifconfig="scsection/kerssgroup/enablejq">
                <type>skin_js</type>
                <script>js/sizechart/fancybox/jquery-1.8.2.min.js</script>
            </action>
            <action method="addItem" ifconfig="scsection/kerssgroup/enablejq">
                <type>skin_js</type>
                <script>js/sizechart/fancybox/jquery-noconflict.js</script>
            </action>
            <action method="addItem" ifconfig="scsection/kerssgroup/scenable">
                <type>skin_js</type>
                <script>js/sizechart/fancybox/jquery.fancybox-1.3.4.pack.js</script>
            </action>
        </reference>
<!--        <reference name="product.info.addtocart">   
            <block type="sizechart/index" name="sizechart_index" template="sizechart/index.phtml"/>   
        </reference>  -->
    </catalog_product_view>
    <sizechart_index_index>
        <reference name="root">   
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>   
        </reference>   
        <reference name="content">   
            <block type="sizechart/index" name="sizechart_index" template="sizechart/index.phtml"/>   
        </reference>   
    </sizechart_index_index>   
</layout>   
	